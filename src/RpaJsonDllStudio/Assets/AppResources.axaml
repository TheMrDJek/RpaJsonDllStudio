<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=netstandard">

    <!-- Цвета -->
    <Color x:Key="PrimaryColor">#0078D7</Color>
    <Color x:Key="SecondaryColor">#005A9E</Color>
    <Color x:Key="AccentColor">#FF5722</Color>
    <Color x:Key="BackgroundColor">#F5F5F5</Color>
    <Color x:Key="TextColor">#212121</Color>
    <Color x:Key="BorderColor">#BDBDBD</Color>
    
    <!-- Кисти -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    
    <!-- Размеры -->
    <sys:Double x:Key="FontSizeSmall">11</sys:Double>
    <sys:Double x:Key="FontSizeNormal">13</sys:Double>
    <sys:Double x:Key="FontSizeLarge">16</sys:Double>
    <sys:Double x:Key="FontSizeHeading">20</sys:Double>
    
    <Thickness x:Key="DefaultMargin">10</Thickness>
    <Thickness x:Key="DefaultPadding">10</Thickness>
    <CornerRadius x:Key="DefaultCornerRadius">3</CornerRadius>
    
</ResourceDictionary> 